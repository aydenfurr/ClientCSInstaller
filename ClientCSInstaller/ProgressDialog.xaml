<Page x:Class="ClientCSInstaller.ProgressDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientCSInstaller"
      mc:Ignorable="d"
      Title="ProgressDialog" Height="194" Width="709">
    <Grid>
        <ProgressBar x:Name="allProgress" HorizontalAlignment="Center" Height="29" Margin="0,154,0,0" VerticalAlignment="Top" Width="690"/>
        <Label x:Name="allProgressLabel" Content="Overall Progress" HorizontalAlignment="Left" Margin="10,123,0,0" VerticalAlignment="Top" Foreground="White"/>
        <ProgressBar x:Name="downloadProgress" HorizontalAlignment="Center" Height="29" Margin="0,89,0,0" VerticalAlignment="Top" Width="690"/>
        <Label x:Name="downloadProgressLabel" Content="Download Progress" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="title" Content="Please wait while we install your client..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
    </Grid>
</Page>
