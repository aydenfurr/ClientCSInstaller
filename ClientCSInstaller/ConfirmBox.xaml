<Page x:Class="ClientCSInstaller.ConfirmBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientCSInstaller"
      mc:Ignorable="d"
      Title="ConfirmBox" Height="120" Width="280">

    <Grid>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30" Color="#55000000"/>
        </Grid.Effect>
        <Border Background="#222222" CornerRadius="8" BorderThickness="1" BorderBrush="#333333">
            <Grid>
                <Label x:Name="titleLabel" Content="Title Dialog" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
                <Label x:Name="contentLabel" Content="Content? Yes or No" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Button x:Name="primaryButton" Content="Yes" HorizontalAlignment="Left" Margin="140,90,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click_1"/>
                <Button x:Name="cancelButton" Content="No" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
